FROM node:16-alpine
RUN apk add --no-cache tzdata
ENV TZ=America/Santiago

# Directorio de trabajo en el contenedor
WORKDIR /app

# Copiar los archivos de la aplicaci贸n
COPY package.json yarn.lock ./
COPY .env /app/dist/
COPY ./src/util/certificate.crt /app/dist/util/certificate.crt

# Instalar las dependencias y construir la aplicaci贸n
RUN yarn install


COPY . .

RUN yarn build

# Directorio de trabajo en el contenedor
WORKDIR /app/dist

# Exponer el puerto en el que se ejecuta la aplicaci贸n
EXPOSE 3006

# Comando para iniciar la aplicaci贸n
CMD ["node", "server.js"]