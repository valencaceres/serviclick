FROM node:16-alpine

# Directorio de trabajo en el contenedor
WORKDIR /app

# Copiar los archivos de la aplicaci贸n
COPY package.json yarn.lock ./
COPY .env /app/dist/

# Instalar las dependencias y construir la aplicaci贸n
RUN yarn install


